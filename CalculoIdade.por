Algoritmo "CalcIdade"
      //Cálculo de Idade
//Peça ao usuário seu ano de nascimento e o ano atual. Calcule e mostre a idade.
Var
    a, b, resultado : inteiro


Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
     

    escreva("Digite seu ano de nasc: ")
    leia(a)
    escreva("Digite o ano atual: ")
    leia(b)

    resultado <- b - a

    escreva("A verdadeira idade: ", resultado)

Fimalgoritmo
